<% @article = Article.find(favorite.article_id) %>
<% user = @article.user %>
<li id="favorite-<%= favorite.id %>">
  <div class="row favorite-article">
    <div class="col-md-2">
      <%= link_to((image_tag @article.picture.url), article_path(@article), class: 'article-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to @article.title, article_path(@article) %></p>
      <p><%= @article.description %></p>
      <p class="article-user">articled by <%= link_to user.name, user_path(user) %></p>
    </div>
  </div>
</li>
